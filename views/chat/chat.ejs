<!DOCTYPE html>
<html>
  <head>
    <title>Socket.IO - trybe</title>
    <link rel="stylesheet" href="./css/chat.css">
  </head>
  <body>
    <header><h1 id="nickname">NOME AQUI</h1></header>
    <div class="box">
      <div class="online-user">
        <ul id="users"></ul>
      </div>
      <div class="message-box">
        <ul class="messages">
          <% if (chatHistory) { %>
            <% chatHistory.forEach((message) => { %>
              <li> <%= `${message.timestamp} ${message.nickname} ${message.message}` %> </li>
            <% }) %>
          <% } %>
        </ul>
      </div>
    </div>
    <form>
      <input class="nickNameInput" autocomplete="off" placeholder="Insira seu nick" data-testid="nickname-box" /><button class="buttonSave" data-testid="nickname-button">Salvar</button>
      <input class="messageInput" autocomplete="off" placeholder="Digite a mensagem" data-testid="message-box" /><button button="submit" data-testid="send-button">Enviar</button>
    </form>
    <script src="/socket.io/socket.io.js"></script>
    <script src='./js/chat.js'></script>
  </body>
</html>
