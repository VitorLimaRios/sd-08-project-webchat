<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Web chat</title>
  <link rel="stylesheet" href="./style.css">
</head>
<body>
  <div class="left-content">
    <input type="text" class="nickname">
    <button class="btn-save-nick">save</button>
  </div>
  <div class="right-content">
    <ul class="web-chat"></ul>
  </div>
  <textarea class="write-message"></textarea>
  <button class="send-message-btn">Enviar</button>
</body>

<script src="/socket.io/socket.io.js"></script>
<script>
  const socket = io()

  const textArea = document.querySelector('.write-message');
  const btnSendMessage = document.querySelector('.send-message-btn');
  const nicknameInput = document.querySelector('.nickname');

  const sendMessage = () => {
    const nickname = nicknameInput.value;
    const chatMessage = textArea.value;

    socket.emit('message', { nickname, chatMessage })
  }

  btnSendMessage.addEventListener('click', sendMessage);

  socket.on('message', (message) => {
    const ulChat = document.querySelector('.web-chat');
    
    const li = document.createElement('li')

    li.innerText = message;
    
    ulChat.appendChild(li);
    
    textArea.value = ''

    console.log(message, ulChat, li)
  })

</script>
</html>