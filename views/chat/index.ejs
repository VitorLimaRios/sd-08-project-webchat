<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Webchat</title>
  <link rel="stylesheet" src="/public/styles/chat.css">
</head>
<body>
  <form>
    <label for="nicknameInput">Digite seu nome aqui</label>
    <input type="text" id="nicknameInput" data-testid="nickname-box" />
    <button type="button" id="btn-salvar" data-testid="nickname-button">Salvar</button>
    <textarea id="message-area" data-testid="message-box"></textarea>
    <button type="button" id="btn-enviar" data-testid="send-button">Enviar</button>
  </form>
  <ul id="usersConnected"></ul>
  <ul id="chat" class="chatBox"></ul>
</body>
<script src="/socket.io/socket.io.js"></script>
<script src="/scripts/chat.js"></script>
</html>
