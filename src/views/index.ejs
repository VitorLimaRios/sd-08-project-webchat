<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.15.3/css/all.css" integrity="sha384-SZXxX4whJ79/gErwcOYf+zWLeJdY/qpuqC4cAa9rOGUstPomtqpuNWT9wdPEn2fk" crossorigin="anonymous">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
  <link rel="stylesheet" href="css/style.css">
  <title>WeChat - Connecting the world</title>
</head>
<body>
  <div class="chat-container">
    <header class="chat-header">
      <div class="form-container">
        <form id="chat-form" class="form-group">
          <div class="form-row input-group mb-3">
            <div class="input-group mb-3">
              <input
                required
                type="text"
                name="nick"
                id="nick"
                class="form-control col-sm-9"
                data-testid="nickname-box"
                placeholder="Insert your nickname"
              >
              <div class="input-group-append">
                <button
                  type="submit"
                  class="btn btn-primary"
                  data-testid="nickname-button"
                >
                  <i class="fas fa-save"> </i> Save
                </button>
              </div>
            </div>
          </div>
        </form>
      </div>
      <h1><i class="far fa-comments fa-2x"> </i> WeChat</h1>
    </header>
    <main class="chat-main">
      <div class="chat-sidebar row">
        <h3 class="cow"><i class="fas fa-users"></i> Users</h3>
        <ul id="users" class="col"></ul>
      </div>
      <div class="chat-messages">
					<div class="message"></div>
					<div class="message"></div>
      </div>
    </main>
    <div class="chat-form-container">
      <form id="chat-form">
        <input
          id="message"
          type="text"
          name="message"
          required
          autocomplete="off"
          data-testid="message-box"
          placeholder="Enter your message here"
        />
        <button
          data-testid="send-button"
          class="btn btn-primary"
          id="send-burtton"
          type="button"
        >
          <i class="fas fa-paper-plane"></i> Send
        </button>
      </form>
    </div>
  </div>
  <script
    src="https://cdnjs.cloudflare.com/ajax/libs/qs/6.9.2/qs.min.js"
    integrity="sha256-TDxXjkAUay70ae/QJBEpGKkpVslXaHHayklIVglFRT4="
    crossorigin="anonymous"
  >
  </script>
  <script src="/socket.io/socket.io.js"></script>
  <script>
    const message = document.getElementById('message');
    const chatMessages = document.querySelector('.chat-messages');
    const roomName = document.getElementById('room-name');
    const userList = document.getElementById('users');

    const client = io();

client.on('connect', () => {
  const user = `${client.id}`
  client.emit('joinRoom', user);
});
client.on('onlineUsers', (users) => {
  outputUsers(users);
});
client.on('message', (message) => {
  outputMessage(message);
  chatMessages.scrollTop = chatMessages.scrollHeight;
});

message.addEventListener('change', (e) => {
  e.preventDefault();
  let messages = e.target.value;
  client.emit('chatMessage', messages);
  e.target.value = '';
  e.target.focus();
});

function outputMessage(message) {
  const div = document.createElement('div');
  div.classList.add('message');
  const p = document.createElement('p');
  p.classList.add('meta');
  p.innerHTML = `<span data-testid="message">${message}<span>`;
  div.appendChild(p);
  const img = document.createElement('img');
  img.setAttribute("src","https://i.pravatar.cc/50")
  img.setAttribute("class","avatar")
  div.appendChild(img);
  document.querySelector('.chat-messages').appendChild(div);
}

function outputUsers(users) {
  userList.innerHTML = '';
  users.forEach((user) => {
    const li = document.createElement('li');
    li.innerHTML = `<span data-testid="online-user">${user.nickname}<span>`
    userList.appendChild(li);
  });
}

  </script>
</body>
</html>