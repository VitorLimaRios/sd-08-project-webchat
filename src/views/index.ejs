<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css" integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm" crossorigin="anonymous">
  <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.15.3/css/all.css" integrity="sha384-SZXxX4whJ79/gErwcOYf+zWLeJdY/qpuqC4cAa9rOGUstPomtqpuNWT9wdPEn2fk" crossorigin="anonymous">
  <title>WeChat - Connecting the world</title>
</head>
<body>
  <div id="hero" class="container border border-primary rounded">

    <div id="up-side" class="container-fluid row p-4">      
      <div id="user-area" class="container-fluid col-sm-6 col-md-5 border border-primary w-25">
        <div class="form-container">
          <form id="chat-form" class="form-group">
            <div class="form-row input-group mb-3">
              <div class="input-group mb-3">
                <input
                  type="text"
                  name="nick"
                  id="nick"
                  class="form-control col-sm-9"
                  data-testid="nickname-box"
                  placeholder="Insert your nickname"
                >
                <div class="input-group-append">
                  <button
                    type="submit"
                    class="btn btn-primary"
                    data-testid="nickname-button"
                  >
                    <i class="fas fa-save"> </i> Save
                  </button>
                </div>
              </div>
            </div>
          </form>
        </div>

        <div id="logged-uers">

          <div id="title">
            <h4><i class="fas fa-users"></i> Users</h4>
          </div>

          <div id="users-list">
            <ul id="users-list-nick"></ul>
          </div>

        </div>
      </div>
      <div id="message-area" class="container col-sm-7 border border-primary w-75 chat-messages">
        <ol id="message-list"></ol>
      </div>
    </div>

    <div id="down-side" class="container py-3">
      <div class="container-fluid">
        <div class="form-container">
          <form id="chat-form" class="form-group">
            <div class="form-row input-group mb-3">
              <div class="input-group mb-3">
                <input
                  type="text"
                  class="form-control"
                  data-testid="message-box"
                  placeholder="Type your message here"
                >
                <div class="input-group-append">
                  <button
                    data-testid="send-button"
                    class="btn btn-primary"
                  >
                  <i class="fas fa-paper-plane"> </i> Send
                </button>
                </div>
              </div>
            </div>
          </form>
        </div>
      </div>
    </div>

  </div>
    <script src="/socket.io/socket.io.js"></script>
    <script>
      const messageList = document.getElementById('message-list')
      const usersListNick = document.getElementById('users-list-nick')
      const chatForm = document.getElementById('chat-form')
      

      const client = io();

      client.on('connect', () => {
        const user = `${client.id}`
        client.emit('newUser', user);
      });

      const sendMessage = (message) => {
        const li = document.createElement('li');
        li.innerHTML = `<span data-testid="message">${message}<span>`
        messageList.appendChild(li)
      }

      const connectList = (users) => {
        users.map(user => {
          const li = document.createElement('li');
          li.innerHTML = `<span data-testid="online-user">${user.nickname}<span>`
          usersListNick.appendChild(li)
        })
      }

      function outputUsers(users) {
        usersListNick.innerHTML = '';
        users.map((user) => {
          const li = document.createElement('li');
          li.innerHTML = `<span data-testid="online-user">${user.nickname}<span>`
          usersListNick.appendChild(li);
        });
      }

      client.on('newUser', users => {
        connectList(users)
      })

      client.on('message', message => {
        sendMessage(message)
        messageList.scrollTop = messageList.scrollHeight;
      })

      chatForm.addEventListener('submit', (e) => {
        e.preventDefault();
        let msg = e.target.elements.msg.value;
        msg = msg.trim();

        if (!msg) {
          return false;
        }
        client.emit('message', msg);
        e.target.elements.msg.value = '';
        e.target.elements.msg.focus();
      });

      
    </script>
</body>
</html>